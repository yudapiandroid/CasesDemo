                android:layout_marginTop="8dp"
                android:text="病例 以胸膜下蜂窝样改变为表现的干燥综合征"
                android:textColor="@color/text_3e"
                android:textSize="@dimen/text_size_x7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="来源: 呼吸内科急重症与疑难病例诊治评述"
                android:textSize="@dimen/text_size_x5"
                android:textColor="@color/text_6e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="作者: 周晓明"
                android:textSize="@dimen/text_size_x5"
                android:textColor="@color/text_6e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="8dp"
                android:background="@color/main_line_x"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="16dp"
                    android:background="@color/main_color"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>
                
                <TextView
                    android:text="病例摘要"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_x6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="xxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@mipmap/image_05"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_marginTop="8dp"
                android:background="@color/main_line_x"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="16dp"
                    android:background="@color/main_color"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:text="临床决策分析"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_x6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="xxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:layout_marginTop="8dp"
                android:background="@color/main_line_x"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="16dp"
                    android:background="@color/main_color"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:text="最终诊断"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_x6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="直窦雪栓形成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <View
                android:layout_marginTop="8dp"
                android:background="@color/main_line_x"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="16dp"
                    android:background="@color/main_color"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:text="讨论"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_x6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="xxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="8dp"
                android:background="@color/main_line_x"
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginLeft="16dp"
                    android:background="@color/main_color"
                    android:layout_width="4dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:text="参考文献"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/text_size_x6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:text="xxxx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

    <View
        android:background="@color/main_line_x"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <LinearLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp">
        </View>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_dianzhan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/text_a9"
                android:textSize="@dimen/text_size_x4"
                android:text="1024"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/icon_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/text_a9"
                android:textSize="@dimen/text_size_x4"
                android:text="1024"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_error"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>